<p id="notice"><%= notice %></p>

<h1>Optional Holidays</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Date</th>
      <th>Lock version</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @optional_holidays.each do |optional_holiday| %>
      <tr>
        <td><%= optional_holiday.title %></td>
        <td><%= optional_holiday.description %></td>
        <td><%= optional_holiday.date %></td>
        <td><%= optional_holiday.lock_version %></td>
        <td><%= link_to 'Show', optional_holiday %></td>
        <td><%= link_to 'Edit', edit_optional_holiday_path(optional_holiday) %></td>
        <td><%= link_to 'Destroy', optional_holiday, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

